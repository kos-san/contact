<div class="bg-light">
  <div class="container">
    <div class="py-5 text-center">
      <h2>お問い合わせ</h2>
    </div>

    <div class="row">
      <div class="col order-md-1">
        <h4 class="mb-3">Contact Form</h4>

        <div class="row">
          <%= form_with(model: @comment, local: true) do |f| %>
            <%= f.label :name, value: "お名前" %><br>
            <%= f.text_field :name, class: "col-md-3" %><br>
            <label for="email"> メールアドレス </label><br>
            <%= f.text_field :email, class: "col-md-3" %><br>
            <label for="title">件名 </label><br>
            <%= f.text_field :title, class: "col-md-4" %><br>
            <label for="content">問い合わせ内容</label><br>
            <%= f.text_area :content, class: "col-md-4"%><br>
            <%= f.submit "送信"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>




