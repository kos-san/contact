

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">日時</th>
      <th scope="col">名前</th>
      <th scope="col">メールアドレス</th>
      <th scope="col">件名</th>
      <th scope="col">内容</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <th scope="row"> <%= comment.id %> </th>
        <td> <%= l comment.created_at %> </td>
        <td> <%= comment.name %> </td>
        <td> <a href="mailto:<%= comment.email%>"><%= comment.email %></a> </td>
        <td> <%= comment.title %> </td>
        <td> <%= comment.content %> </td>
      </tr>
    <% end %>
  </tbody>
</table>