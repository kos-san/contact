<div class="contents row">
  <div class="success">
   <h3>送信が完了しました</h3>
  </div>
  <div class="main-container">
    <h4>送信内容</h4>
  </div>
  <table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">名前</th>
      <th scope="col">メールアドレス</th>
      <th scope="col">件名</th>
      <th scope="col">内容</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td> <%= @this_comment[:name] %> </td>
        <td> <a href="mailto:<%= @this_comment[:email]%>"><%= @this_comment[:email] %></a> </td>
        <td> <%= @this_comment[:title] %> </td>
        <td> <%= @this_comment[:content] %> </td>
      </tr>
  </tbody>
</table>
</div>

<%= link_to '問い合わせ画面へ', new_comment_path %>